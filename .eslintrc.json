{
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-undef": "off",
        "no-console": "warn",
        "no-tabs": "error",
        "no-param-reassign": "warn",
        "no-throw-literal": "warn",
        "prefer-arrow-callback": "warn",
        "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1 }],
        "indent": [
            "error",
            4,
            {"SwitchCase": 1}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
