.background-loader
    background-color rgba(245, 245, 245, 0.5)
    top 0
    left 0
    position fixed
    width 100%
    height 100%
    z-index 1000

.loader {
    border: 5px solid bisque;
    border-top: 5px solid darkmagenta;
    border-bottom: 5px solid mediumspringgreen;
    border-radius: 100px;
    margin 20% auto
    width: 60px;
    height: 60px;
    z-index: 1000;
    animation: spinner 1s ease-in-out infinite;
    overflow: visible;
}

.info
    width: 60%;
    height: 20%;
    //display: block;
    //margin: 15% auto;
    //text-align: center;
    display flex
    flex-direction column
    text-align: center;
    justify-content: center;
    margin: 15% auto;

@keyframes spinner {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}
section {
    display: block;
}

[hidden] {
    display: none;
}

.main__menu button[hidden] {
    display: none;
}

h1 {
    color:lightseagreen;
}
h2 {
    color:lightseagreen;
}

.green-btn {
    display: block;
    margin: 10px auto;
    width: 100px;
    background-color: #595;
    color: #111;
    height: 50px;
    border-width: 0;
    opacity: 0.9;
    box-shadow: 0 0 15px;
    cursor: pointer;
    border-radius: 9px;
}
