@import '../../constantStyles.styl';

.form-section
    width: 200px
    margin: auto

.form-field
    border: 1.5px solid #ddd
    border-radius: 5px
    height: 51px
    margin-bottom: 10px
    padding-left: 5px
    min-width: 192px

.form-label
    overflow: hidden
    float:left
    margin-top: -10px
    font-size: 14px
    padding-right: 2px
    color: btnColor

input
    margin: 6px auto
    border-width: 0
    padding: 4px

.signup__input
    height: 30px
    background-color: #595
    width: 150px
    cursor: pointer
    opacity: 0.9

.form-input
    height: 30px
    background-color: btnColor
    font-size: btnTextSize
    width: 150px
    cursor: pointer
    opacity: 0.6

.login__input
    height: 30px
    background-color: #595
    width: 60px
    cursor: pointer
    opacity: 0.8

.password-validate
    font-size: 13px
    font-family: KacstScreen
    font-style: italic
    margin-top: -6px
    color: btnColor
