@import '../../constantStyles.styl';

.form-section
    width: 200px
    margin: auto

.form-field
    min-width: 192px

.form-label
    overflow: hidden
    float:left
    font-size: 15px;
    font-style: italic;
    font-family: Roboto;
    padding-right: 2px
    color: btnColor

input
    margin: auto
    border-width: 0
    padding: 4px

.signup__input
    height: 30px
    background-color: #7aa99e
    width: 150px
    cursor: pointer
    opacity: 0.9

.form-input
    height: 30px
    background-color: btnColor
    font-size: btnTextSize
    width: 150px
    cursor: pointer
    opacity: 0.6
    margin-top: 10px

.login__input
    height: 30px
    background-color: #595
    width: 60px
    cursor: pointer
    opacity: 0.8

.password-validate, .login-validate, .email-validate
    font-size: 14px
    font-family: KacstScreen
    font-style: italic
    padding-bottom 5px
    color: btnColor
    height: 15px
