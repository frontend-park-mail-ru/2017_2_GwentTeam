.deck
  background-color transparent
  top 0
  left 0
  position fixed
  width 100%
  height 100%
  z-index 1000
  &__rect
    background-color white
    width 200px
    height 200px
    position absolute
    left 41%
    top 35%

.deck__rect
  .form-input
    width 100px

.deck_active
  background-color transparent
  top 0
  left 0
  position fixed
  width 100%
  height 100%
  z-index 1000
  backdrop-filter blur(5px)
  animation popup 1s linear


@keyframes popup
  0%
    opacity 0
  25%
    opacity 0.25
  50%
    opacity 0.5
  75%
    opacity 0.75
  100%
    opacity 1

