.scoreboard-view
    display flex;
    flex-direction column
    align-items  center

.scoreboard-view__header


.scoreboard-view__buttons
    display flex
    justify-content space-around
#page
    border 2px solid black
    padding 0 5px
#back, #forward
    font-style italic
    &:hover
        color #36324a
        cursor pointer
#user
    border 2px solid aquamarine
    &:hover
        cursor pointer
        font-style italic
        //animation uptr .35s ease-in-out 1
@keyframes uptr
    50%
        transform translateY(-10px)
    100%
        transform translateY(0px)
table
    border-collapse collapse
    border 2px solid black

