.scoreboard-view
    table#t01
        thead
            tr
                td Place
                td Player
                td Score
        tbody
            if flag
                tr#user
                    td #{user.position}
                    td #{user.login}
                    td #{user.wins}
            unless flag
            each gamer in users
                case gamer.login
                    when user.login
                        tr#user
                            td #{user.position}
                            td #{gamer.login}
                            td #{gamer.wins}
                    default
                        tr
                            td #{gamer.position}
                            td #{gamer.login}
                            td #{gamer.wins}
    div.scoreboard-view__buttons
        div#back Previous
        div#page #{page}
        div#forward Next
