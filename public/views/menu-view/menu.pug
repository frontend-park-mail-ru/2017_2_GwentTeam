mixin item(title, href)
    button.main__menu(href=href)= title

.main__menu
    if authorized
        +item('Play', '/multiplayer')
        +item('Profile', '/profile')
        +item('Scoreboard', '/score')
        +item('About', '/about')
        +item('Sign out', '/logout')
    unless authorized
        button.main__menu#popup Play
        +item('Sign in','/login')
        +item('Sign up','/signup')
        +item('About', '/about')

