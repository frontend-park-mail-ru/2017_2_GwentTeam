.main__menu {
    margin: auto;
    display: flex;
    flex-direction: column;
}

.main__menu button {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center
    margin: 10px auto;
    width: 100px;
    background-color: #595;
    color: #111;
    height: 50px;
    border-width: 0;
    opacity: 0.9;
    box-shadow: 0 0 15px;
    cursor: pointer;
    border-radius: 9px;
}