.game
    margin-top: 75px;


.game-view
    display: flex;
    margin: auto;
    width: 700px;


.game-view
    &__board
        margin: auto;
        width: 500px;
    &__cardfield
        margin: auto;
        width: 600px;
        display: block;
    &__gamefield
        margin: auto;
    &__profilefield
        height: 440px;
        display: inline;
        width: 170px;


.cardfield__card-img, .cardfield__card-img__mousedown {
    width: 35px;
    height: 50px;
    padding: 5px;
}

.cardfield__card-img:hover {
    transform: translateY(-20px);
    transition-duration: 0.3s;
    cursor: pointer;
}

.cardfield__wrapper {
    background-color: black;
    height: 65px;
    width: 55px;
    display: inline-flex;
}



.game-board__board-item {
    background-color: #22170f;
    opacity: 0.9;
    height: 57px;
    margin: 10px 0;
}

.board-item__inneritem {
    margin: 0 auto;
}


.profilefield__score,
.profilefield__btn-pass,
.profilefield__btn-exit {
    background-color: #22170f;
    margin: 10px;
    opacity: 0.9;
    padding: 7px;
    box-shadow: 0 0 15px black;
    color: white;
}

.profilefield__btn-exit {
    background-color: #595;
    cursor: pointer;
}

.profilefield__btn-pass {
    text-align: center;
    cursor: pointer;
}

.game-view__btn-exit {
    width: 200px;
    display: block;
    margin: 10px;
    background-color: #595;
    color: #111;
    height: 50px;
    border-width: 0;
    opacity: 0.9;
    box-shadow: 0 0 15px;
    cursor: pointer;
    border-radius: 9px;
}
